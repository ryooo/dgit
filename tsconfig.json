{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist/",
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@styles/*": ["./styles/*"],
    },
    "lib": [
      "ES2015",
      "DOM"
    ]
  }
}